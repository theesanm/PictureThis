# Database Configuration
DB_HOST=localhost
DB_PORT=5430
DB_NAME=PictureThis
DB_USER=postgres
DB_PASSWORD=your_password_here

# Server Configuration
PORT=3011
NODE_ENV=development

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRE=7d

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_smtp_user
SMTP_PASS=your_smtp_password
FROM_EMAIL=noreply@picturethis.ai
FRONTEND_URL=http://localhost:5173

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key

# Image Generation API
OPENAI_API_KEY=your_openai_api_key
REPLICATE_API_TOKEN=your_replicate_api_token

# OpenRouter Configuration for prompt enhancement and image generation
OPENROUTER_API_KEY=your_openrouter_api_key
OPENROUTER_MODEL=openai/gpt-oss-20b:free
OPENROUTER_GEMINI_MODEL=google/gemini-2.5-flash-image-preview
OPENROUTER_API_URL=https://openrouter.ai/api/v1
OPENROUTER_APP_URL=http://localhost:3011

# File Upload Configuration
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100
